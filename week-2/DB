TASK 1

BD

CREATE DATABASE gestion_academica_universidad;

ESTUDIANTES

CREATE TABLE estudiantes(
id_estudiante INT AUTO_INCREMENT PRIMARY KEY,
nombre_completo VARCHAR(105) NOT NULL,
correo_electronico VARCHAR(100),
genero ENUM('m', 'f', 'otro'),
identificacion VARCHAR(25),
carrera VARCHAR(45),
fecha_nacimiento DATE,
fecha_ingreso TIMESTAMP DEFAULT CURRENT_TIMESTAMP()
)

DOCENTES

CREATE TABLE docentes(
id_docente INT AUTO_INCREMENT PRIMARY KEY,
nombre_completo VARCHAR(105),
correo_instiitucional VARCHAR(45),
departamento_academico VARCHAR(30),
anos_experiencia INT
)

cursos

CREATE TABLE cursos(
id_cursos INT AUTO_INCREMENT PRIMARY KEY,
nombre VARCHAR(45),
codigo VARCHAR(25) UNIQUE,
creditos INT,
semestre INT,
id_docente FOREIGN KEY(id_docente ),
)